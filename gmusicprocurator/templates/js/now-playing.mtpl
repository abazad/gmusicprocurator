[% if (!!track.albumArtRef && track.albumArtRef.length > 0) { %]
<img class="albumart" src="[[ track.albumArtRef[0].url ]]" alt="" />
[% } /* albumArtRef */ %]
<span class="details">
  <span class="primary">
    <b>[[ track.title ]]</b>
  </span>
  <span class="secondary">
    <span>[[ track.artist ]]</span>: <i>[[ track.album ]]</i>
  </span>
</span>
